<Window x:Class="Memory_Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Memory Monitor" Height="200" Width="400">
    <Border>
        <Grid>
            <oxy:PlotView Model="{Binding MemoryPlotModel}" Background="Transparent"/>
            <TextBlock x:Name="UsageText" Text="{Binding UsageText}"
                       FontSize="18" 
                       Foreground="RosyBrown" 
                       Margin="10,10,0,0" />
        </Grid>
    </Border>
</Window>
